    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/clock_in"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/page_module_bg"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="0dp"
                    android:id="@+id/clock_in_day_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已学8天"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="28sp">

                </TextView>
                <TextView
                    android:id="@+id/everyday_positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="每天一句正能量鼓励"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="18sp">

                </TextView>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- 累计学习 -"
                    android:gravity="center">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/word_counter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="50词"
                        android:textSize="24sp"
                        android:gravity="center">

                    </TextView>
                    <TextView
                        android:id="@+id/centence_counter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="12句"
                        android:textSize="24sp"
                        android:gravity="center">

                    </TextView>
                    <TextView
                        android:id="@+id/hour_counter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2时"
                        android:textSize="24sp"
                        android:gravity="center">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/course_recommend"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/page_module_bg"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="推荐课程"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:gravity="center">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/recommened_course_image_bg">

                    </ImageView>
                    <RelativeLayout
                        android:id="@+id/course1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp">
                        <TextView
                            android:id="@+id/course1name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一周学出行旅游"
                            android:textColor="#000000"
                            android:textSize="20sp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="内容简介"
                            android:textSize="18sp"
                            android:layout_below="@+id/course1name"
                            android:layout_marginTop="5dp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3/7"
                            android:textSize="18sp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true">

                        </TextView>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/recommened_course_image_bg">

                    </ImageView>
                    <RelativeLayout
                        android:id="@+id/course2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp">
                        <TextView
                            android:id="@+id/course2name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="七天学人际交往"
                            android:textColor="#000000"
                            android:textSize="20sp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="内容简介"
                            android:textSize="18sp"
                            android:layout_below="@+id/course2name"
                            android:layout_marginTop="5dp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/7"
                            android:textSize="18sp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true">

                        </TextView>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/recommened_course_image_bg">

                    </ImageView>
                    <RelativeLayout
                        android:id="@+id/course3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp">
                        <TextView
                            android:id="@+id/course3name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一周学出行旅游"
                            android:textColor="#000000"
                            android:textSize="20sp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="内容简介"
                            android:textSize="18sp"
                            android:layout_below="@+id/course3name"
                            android:layout_marginTop="5dp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/7"
                            android:textSize="18sp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true">

                        </TextView>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/recommened_course_image_bg">

                    </ImageView>
                    <RelativeLayout
                        android:id="@+id/course4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp">
                        <TextView
                            android:id="@+id/course4name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一周学出行旅游"
                            android:textColor="#000000"
                            android:textSize="20sp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="内容简介"
                            android:textSize="18sp"
                            android:layout_below="@+id/course4name"
                            android:layout_marginTop="5dp">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/7"
                            android:textSize="18sp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true">

                        </TextView>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>