<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_commend"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/cv_recommend_head_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true"
            >
            <ImageView
                android:id="@+id/tv_recommend_head_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/head"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_toRightOf="@id/cv_recommend_head_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/friend_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cherry"
            android:textAllCaps="false"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/friend_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="逆光而来，值得一切美好"
            android:maxLines="1"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_attention"
            android:layout_toRightOf="@id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消关注"
                android:textAllCaps="false"
                android:textColor="#BFAD05"/>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:layout_alignLeft="@id/linear1">

        <TextView
            android:id="@+id/friend_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/friend_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:maxEms="10"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:layout_alignLeft="@id/linear1"
        android:layout_marginTop="10dp"
        android:text="30分钟前"/>

        <LinearLayout
            android:id="@+id/btn_groups_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/time_text">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_transmit"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/transmit"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="20"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:id="@+id/iv_discussion"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/discussion"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="63"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:id="@+id/iv_tag"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/tag"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="118"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/collect"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="118"
                    />
            </LinearLayout>

        </LinearLayout>


<!--    <View-->
<!--        android:layout_below="@+id/btn_groups_1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:background="@android:color/darker_gray" />-->

    </RelativeLayout>

<!--    评论部分-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bg_pinlun"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_marginLeft="10dp"
                app:cardPreventCornerOverlap="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/head"
                    android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_marginLeft="10dp"
                app:cardPreventCornerOverlap="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/head_1"
                    android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_marginLeft="10dp"
                app:cardPreventCornerOverlap="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/head_2"
                    android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="等118人点赞"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可盐可甜："
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嘻嘻，加油啊！"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="credibility："
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冲冲冲！"
                />
        </LinearLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全部63条评论>"
            android:textColor="#000000"
            />
    </LinearLayout>

</LinearLayout>